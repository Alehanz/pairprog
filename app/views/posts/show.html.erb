<div class="row">
<div class="col-md-12">
  <div class="showpost">
    <table class="table">
      <tr>
        <th><h1><%= @post.title %></h1></th>
      </tr>
      <tr>
        <td><%= @post.description %></td>
      </tr>
    </table>
  </div>
  <div class="form-group">
  <% if current_user == @post.user %>
    <%= button_to "Edit", edit_post_path(@post), :method => :get, class: "btn btn-success" %>
  <% end %>
  </div>
</div>
</div>
