<div class="row">
<div class="col-md-9">
  <div class="form-group">
    <%= form_for @post do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", placeholder: "Max. 100 characters" %><br />
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.bootsy_area :description, class: "form-control", editor_options: { alert_unsaved: false } %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
</div>
</div>
