<h2>Log in</h2>

<div class="row">
  <div class="col-xs-12">
    <div class="form-wrap">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form' }) do |f| %>
        <div class="form-group">
          <%= f.label :login %><br />
          <%= f.text_field :login, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="checkbox">
            <%= f.check_box :remember_me, class: 'checkbox-inline' %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions form-group">
          <%= f.submit "Log in", id: 'btn-login', class: 'btn btn-custom btn-lg btn-block' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
