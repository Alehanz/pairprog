<div class="row">
<div class="col-md-9">
  <%= fields_for ([@post, @post.comments.build]) do |f| %>
    <%= render "shared/error_messages", object: f.object %>

    <div class="form-group">
      <%= f.label :comment %>
      <%= f.bootsy_area :comment_body, class: "form-control", placeholder: "Max. 3000 characters" %><br />
    </div>

    <div class="form-group">
      <%= f.submit "Update Comment", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
</div>
